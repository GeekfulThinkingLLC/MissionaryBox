<div id="app" class="container">
    <nav class="navbar navbar-toggleable-md navbar-light">
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="fa fa-bars"></span>
        </button>
        <%= logo img_options: { class: 'img-responsive', width: 125} %>
        <div id="navbarNavDropdown" class="navbar-collapse collapse">
            <ul class="navbar-nav mr-auto"></ul>
            <ul class="navbar-nav">
            <% if !signed_in? %>
                <li class="nav-item">
                    <%= link_fa_to 'user ', ' LOGIN ', login_path %>
                </li>
                <li class="nav-item">
                    <%= link_fa_to 'plus ', ' SIGN UP', signup_path %>
                </li>
            <% end %>

                <li class="nav-item dropdown">
                    <span class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                      <%= link_fa_to 'bars', ' MENU & PRODUCTS', signup_path %>
                    </span>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
                        <% if signed_in? %>
                            <%= link_to "My Account", logout_path, class: "dropdown-item" %>
                            <%= link_to "My Subscriptions", logout_path, class: "dropdown-item" %>
                            <div class="dropdown-divider"></div>
                            <%= link_to "Logout", logout_path, class: "dropdown-item" %>
                        <% else %>
                            <%= link_to "Sign Up For Free", signup_path, class: "dropdown-item" %>
                            <%= link_to "Subscriptions", root_path, class: "dropdown-item" %>
                        <% end %>
                    </div>
                </li>

            </ul>
        </div>
    </nav>
</div>
