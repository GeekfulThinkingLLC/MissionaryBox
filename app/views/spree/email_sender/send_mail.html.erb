<div class="container login-card-margin">
  <div class="card login-card-style">
    <div class="card-block">
      <h1 class="text-center"><%= Spree.t('email_to_friend.tell_about', product: @object.name) %></h1>

      <%= form_for(@mail_to_friend, url: email_to_friend_path(params[:type], @object)) do |f| -%>
        <%= render 'spree/shared/error_messages', target: @mail_to_friend %>
        <div class="row">
          <div class="col-md-6">
            <p>
              <%= f.label(:sender_name, Spree.t('email_to_friend.sender_name')) %><br/>
              <%= f.text_field(:sender_name, class: 'form-control') %>
            </p>
          </div>
          <div class="col-md-6">
            <p>
              <%= f.label(:sender_email, Spree.t('email_to_friend.sender_email')) %><br/>
              <%= f.text_field(:sender_email, class: 'form-control') %>
            </p>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <p>
              <%= f.label(:recipient_name, Spree.t('email_to_friend.recipient_name')) %><br/>
              <%= f.text_field(:recipient_name, class: 'form-control') %>
            </p>
          </div>
          <div class="col-md-6">
            <p>
              <%= f.label(:recipient_email, Spree.t('email_to_friend.recipient_email')) %><br/>
              <%= f.text_field(:recipient_email, class: 'form-control') %>
            </p>
          </div>
        </div>
        <p>
          <%= f.label(:message, Spree.t('email_to_friend.message')) %><br/>
          <%= f.text_area(:message, class: 'form-control', rows: 6) %>
        </p>
        <div class="row justify-content-center">
          <div class="col-md-5 col-sm-12">
            <div class="captcha-width">
              <% if Spree::Captcha::Config[:use_captcha] %>
                <%= recaptcha_tags site_key: Spree::Captcha::Config[:site_key], display: { theme: Spree::Captcha::Config[:theme] } %>
              <% end %>
            </div>
          </div>
        </div>
          <p>
            <%= f.submit Spree.t('email_to_friend.send_message'), class: 'btn btn-block btn-large' %>
          </p>
      <% end -%>
    </div>
  </div>
</div>